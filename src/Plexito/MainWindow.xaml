<Window x:Class="Plexito.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="70" Width="300" ResizeMode="NoResize" WindowStyle="None" Background="#FF292929" MouseLeftButtonDown="WindowMouseLeftButtonDown">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="80"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="15"/>
        </Grid.RowDefinitions>
        <TextBlock Foreground="LightSlateGray" Text="Wollt Ihr das Bett in Flammen sehen?" Grid.Row="1"/>
        <TextBlock Foreground="LightSlateGray" Text="Rammstein" Grid.Row="2"/>
        <StackPanel  Orientation="Horizontal">
            <Button FontFamily="Segoe UI Symbol" Content="" />
            <Button FontFamily="Segoe UI Symbol" Content="" />
            <Button FontFamily="Segoe UI Symbol" Content="" />
        </StackPanel>
        <Image Grid.RowSpan="3" Grid.Column="1"></Image>
    </Grid>
</Window>
